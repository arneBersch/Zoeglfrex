QLabel, QListView, QTableView, QHeaderView, QMenu::item, QMenuBar::item {
    color: white;
}

QWidget, QFrame, QInputDialog, QMessageBox, QDialog, QMenu::item:selected {
    background-color: #151515;
}

QPushButton, QComboBox, QTextEdit, QSpinBox, QLineEdit, QHeaderView {
    background-color: #303030;
    color: white;
    border-radius: 0px;
}

QPushButton, QComboBox, QTextEdit, QSpinBox, QLineEdit {
    padding: 10px;
}

QPushButton::checked {
    border: 1px solid white;
}

QProgressBar {
    background-color: #151515;
    color: white;
    text-align: center;
    border-radius: 0px;
}

QScrollBar, QMenu, QProgressBar::chunk, QDial {
    background-color: #303030;
}
